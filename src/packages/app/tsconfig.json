{
    "extends": "../../../tsconfig.json",
    "compilerOptions": {
        "baseUrl": "../../../",
        "rootDir": ".",
        "lib": ["dom", "es7"],
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "types": ["@emotion/core"]
    },
    "exclude": ["node_modules"],
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"]
}
